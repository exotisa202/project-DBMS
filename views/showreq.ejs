<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <!--<title> Responsiive Admin Dashboard | CodingLab </title>-->
    <link rel="stylesheet" href="/css/user.css">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class='bx bxl-c-plus-plus'></i>
      <span class="logo_name">Badhon</span>
    </div>
      <ul class="nav-links">
        <li>
          <a href="#" class="active">
            <i class='bx bx-grid-alt' ></i>
            <span class="links_name" >Donor</span>
          </a>
        </li>     
        <li>
          <a href="#">
            <i class='bx bx-pie-chart-alt-2' ></i>
            <span class="links_name">Patients</span>
          </a>
        </li>
        
        
        
        <li>
          <a href="#">
            <i class='bx bx-user' ></i>
            <span class="links_name">Blood Banks</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bx-message' ></i>
            <span class="links_name">Messages</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bx-heart' ></i>
            <span class="links_name">Favrorites</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bx-cog' ></i>
            <span class="links_name">Setting</span>
          </a>
        </li>
        <li class="log_out">
          <a href="#">
            <i class='bx bx-log-out'></i>
            <span class="links_name">Log out</span>
          </a>
        </li>
      </ul>
  </div>
  <section class="home-section">
    <nav>
      <div class="sidebar-button">
        <i class='bx bx-menu sidebarBtn'></i>
        <span class="dashboard"> Request Dashboard</span>
      </div>
      <div class="search-box">
        <form  action="/search" method="post">
        <input name="bg" type="text" placeholder="Search...">
            <input type="submit" value="search" > </form>

      </div>
      <div class="profile-details">
        <!--<img src="images/profile.jpg" alt="">-->
        <span class="admin_name"></span>
        <i class='bx bx-chevron-down' ></i>
      </div>
    </nav>

    <div class="home-content">
     

      <div class="sales-boxes">
        <div class="recent-sales box">
          <div class="title">Request</div>
          <div class="sales-details">
            <ul class="details">
              <li class="topic">  Name</li>
              <% for (let name of Name){ %>
                  <li> <%=name%></li>
                  <% } %>
            </ul>
            
            <ul class="details">
            <li class="topic">Contact No.</li>
            <% for (let contact of Phone){ %>
                <li> <%=contact%></li>
                <% } %>
          </ul>
         
          <ul class="details">
            <li class="topic">LOCATION</li>
            <% for (let location of Location){ %>
                <li> <%=location%></li>
                <% } %>
          </ul>
          
          <ul class="details">
            <li class="topic">BLOOD GROUP</li>
            <% for (let blood of Blood){ %>
                <li> <%=blood %></li>
                <% } %> 
          </ul>
          <ul class="details">
            <li class="topic">Hospital</li>
            <% for (let date of Hospital){ %>
              <li> <%=date %></li>
              <% } %>
          </ul>
           
          <ul class="details">
            <li class="topic">Email</li>
            <% for (let date of Email){ %>
              <li> <%=date %></li>
              <% } %>
          </ul>
          </div>
           
          <span class="action_btn">
            <a href="/home" method="post">home</a>
          </span>
        </div>
      </div>
    </div>
  </section>

  <script>
   let sidebar = document.querySelector(".sidebar");
let sidebarBtn = document.querySelector(".sidebarBtn");
sidebarBtn.onclick = function() {
  sidebar.classList.toggle("active");
  if(sidebar.classList.contains("active")){
  sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right");
}else
  sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
}
 </script>
</body>
</html>
